#!/bin/bash
# Run e2e tests in headless mode only - no UI allowed

set -e

# Ensure we're in the project root
cd "$(dirname "$0")/../.."

# Force headless mode
export HEADED=false
export CI=true

# Disable any UI mode
unset PWDEBUG

# Colors for output
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
RED='\033[0;31m'
NC='\033[0m'

echo -e "${GREEN}=== Running E2E Tests (Headless Only) ===${NC}"

# Check if Supabase is running
if ! curl -s http://127.0.0.1:54321/rest/v1/ > /dev/null 2>&1; then
    echo -e "${RED}Error: Local Supabase is not running${NC}"
    echo "Please run 'pnpm supabase start' first"
    exit 1
fi


# Run the tests with timeout - fail fast for quality checks
echo -e "${YELLOW}Running e2e tests...${NC}"
if [ -n "$1" ]; then
    # Run specific test file (5 minutes for individual test)
    timeout 300s pnpm playwright test "$@" --reporter=list --max-failures=1 || EXIT_CODE=$?
else
    # Run all tests - workers will be set by playwright config
    # Increased max-failures to 5 to get more feedback before stopping
    timeout 420s pnpm playwright test --reporter=list --max-failures=5 || EXIT_CODE=$?
fi

# Clean up any browser processes
pkill -f "chromium|firefox|webkit" 2>/dev/null || true

if [ "${EXIT_CODE:-0}" -eq 0 ]; then
    echo -e "${GREEN}✅ All e2e tests passed!${NC}"
else
    echo -e "${RED}❌ Some e2e tests failed${NC}"
    exit ${EXIT_CODE}
fi