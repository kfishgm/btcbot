#!/bin/bash
# Run pending migrations on local Supabase

echo "ğŸ”„ Running Supabase migrations..."

# Check if Supabase is running
if ! pnpm supabase status 2>/dev/null | grep -q "RUNNING"; then
    echo "âŒ Supabase is not running. Start it first with: ./claude/commands/supabase-start"
    exit 1
fi

# Run migrations
pnpm supabase db push

if [ $? -eq 0 ]; then
    echo "âœ… Migrations applied successfully!"
    
    # Show migration status
    echo ""
    echo "ğŸ“‹ Current migration status:"
    pnpm supabase migration list
else
    echo "âŒ Failed to apply migrations"
    exit 1
fi